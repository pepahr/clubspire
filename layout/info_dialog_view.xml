<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_dialog_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/colorBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/info_dialog_icon"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:paddingTop="@dimen/padding_16dp"
            android:layout_margin="@dimen/margin_8dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/info_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/margin_4dp"
            android:padding="@dimen/padding_8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorHorizontalDivider" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_4dp"

            android:scrollbars="vertical"
            android:fillViewport="true">

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/info_dialog_main_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16dp"
                android:padding="@dimen/padding_16dp"
                android:paddingBottom="@dimen/dim_24dp"
                android:paddingTop="@dimen/dim_24dp" />
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>